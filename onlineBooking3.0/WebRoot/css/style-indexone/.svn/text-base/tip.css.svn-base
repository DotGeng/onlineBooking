/*tip*/
.z-tip { position: absolute}
.z-tip .z-table { margin: 3px; }

.z-tip .z-table .z-corner { width: 12px; height: 12px; font-size: 1px; line-height: 1px; }


.z-tip .z-table .z-topleft,
.z-tip .z-table .z-topcenter,
.z-tip .z-table .z-topright,
.z-tip .z-table .z-bodyleft,
.z-tip .z-table .z-content,
.z-tip .z-table .z-bodyright,
.z-tip .z-table .z-footerleft,
.z-tip .z-table .z-footercenter,
.z-tip .z-table .z-footerright {
	background-image: url(images/tip/tipbox.png);
	_background-image: url(images/tip/tipbox.gif);
	background-repeat: no-repeat;
	background-position: left top;
}
.z-tip .z-table .z-topcenter { background-position: top; }
.z-tip .z-table .z-topright { background-position: right top; }
.z-tip .z-table .z-bodyleft { background-position: left; }
.z-tip .z-table .z-content { background-position: center;font-size: 12px; }
.z-tip .z-table .z-bodyright { background-position: right; }
.z-tip .z-table .z-footerleft { background-position: left bottom; }
.z-tip .z-table .z-footercenter { background-position: bottom; }
.z-tip .z-table .z-footerright { background-position: right bottom; }
.z-tip .z-table .z-z-tipcontent {
	padding: 3px 0 1px 1px;
	font-size: 12px;
	color: #757168; /*	color:#653;*/
	font-family: Tahoma, SimSun, Verdana, sans-serif;
	line-height: 15px;
	word-break: break-all;
	text-align: justify;
	text-justify: inter-ideograph;
}
.z-tip .z-fang {
	font-size: 1px;
	line-height: 1px;
	position: absolute;
	width: 11px;
	height: 11px;
	background-image: url(images/tip/Callouts.gif);
	background-repeat: no-repeat;
	background-position: 0 0;
}
.z-tip .closebtn { position: absolute; z-index: 10; right: 15px; top: 8px; }
.z-tip .closebtn a {
	display: block;
	height: 10px;
	width: 14px;
	padding: 0 0 0 2px;
	color: #FF7744;
	line-height: 6px;
	+line-height: 7px;
	font-size: 12px;
	border: #DDDDDD 1px solid;
	border-top: none;
}
.z-tip .closebtn a:hover { color: #FFFFFF; text-decoration: none; border-color: #FFCC00; background-color: #FFBB66; }
.z-tip-callout1 .z-fang { right: 13px; top: 0px; background-position: 0px -11px; }
.z-tip-callout1 .closebtn { right: 20px; }
.z-tip-callout2 .z-fang { top: 13px; right: 0px; background-position: 0px -33px; }
.z-tip-callout3 .z-fang { top: 42%; right: 0px; background-position: 0px -33px; }
.z-tip-callout4 .z-fang { bottom: 13px; right: 0px; background-position: 0px -33px; }
.z-tip-callout5 .z-fang { right: 13px; bottom: 0px; background-position: 0px -66px; }
.z-tip-callout6 .z-fang { left: 49%; bottom: 0px; background-position: 0px -55px; }
.z-tip-callout7 .z-fang { left: 13px; bottom: 0px; background-position: 0px -77px; }
.z-tip-callout8 .z-fang { left: 0px; bottom: 13px; background-position: 0px -44px; }
.z-tip-callout9 .z-fang { left: 0px; top: 42%; background-position: 0px -44px; }
.z-tip-callout10 .z-fang { left: 0px; top: 13px; background-position: 0px -44px; }
.z-tip-callout11 .z-fang { left: 13px; top: 0px; background-position: 0px -22px; }
.z-tip-callout12 .z-fang { left: 49%; top: 0px; background-position: 0px 0px; }
